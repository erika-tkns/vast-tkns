
<div class="form-group">
  <%= f.label :name, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-5">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :start_at, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-3">
    <%= f.text_field :start_at, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :end_at, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-3">
    <%= f.text_field :end_at, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :limit_start, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-3">
    <%= f.text_field :limit_start, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :movie_url, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-5">
    <%= f.text_field :movie_url, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :cuepoints, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-4">
    <% @cuepoints.each do |cuepoint| %>
    <div class="checkbox">
        <% checked = @campaign.cuepoints.exists?(cuepoint)  ? true : false %>
        <%= f.check_box 'cuepoint_ids', {:name => 'campaign[cuepoint_ids][]', multiple:true, :checked => checked}, cuepoint.id, "" %>
        <%= cuepoint.name %>
    </div>
    <% end %>
  </div>
</div>
