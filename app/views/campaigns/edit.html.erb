<h1>キャンペーン編集</h1>

<%= form_for @campaign, html: {class: 'form-horizontal'} do |f| %>

  <%= render "shared/error_messages", :object => @campaign %>
  <%= render partial: 'campaigns/form', locals: { f: f } %>

  <%= f.submit '登録', class: 'btn btn-success btn-centered' %>
  <%= link_to "中止", campaigns_path, class: 'btn btn-default' %>
  <%= link_to "削除",
    campaign_path(@campaign.id),
    method: :delete,
    data: { confirm: "削除しますか？一旦削除すると元には戻せません。" },
    class: 'btn btn-link'
   %>

<% end %>
