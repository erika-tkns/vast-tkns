<h1>キャンペーン一覧</h1>
<%= link_to '登録', new_campaign_path, class: "btn btn-primary" %>

<% if @campaigns.any? %>
   <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th> 
        <th>キャンペーン名</th>
        <th>開始日時</th>
        <th>終了日時</th>
        <th>動画url</th>
        <th>キューポイント</th>
      </tr>
    </thead>
    <tbody>
      <% @campaigns.each do |campaign| %>
        <tr>
          <td><%= link_to campaign.id, edit_campaign_path(campaign) %></td>
          <td><%= campaign.name %></td>
          <td><%= campaign.start_at %></td>
          <td><%= campaign.end_at %></td>
          <td><%= campaign.movie_url %></td>
          <td><% campaign.cuepoints.each do |cuepoint| %><%= cuepoint.name %><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>